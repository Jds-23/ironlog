  "dependencies": {
    "@hono/trpc-server": "^0.4.0",
    "@ironlog/api": "workspace:*",
    "@ironlog/auth": "workspace:*",
    "@ironlog/db": "workspace:*",
    "@ironlog/env": "workspace:*",
    "@trpc/server": "catalog:",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "hono": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.18",
    "@cloudflare/workers-types": "catalog:",
    "@ironlog/config": "workspace:*",
    "@types/node": "^22.13.14",
    "@vitest/coverage-istanbul": "^3.2.4",
    "alchemy": "catalog:",
    "drizzle-orm": "^0.45.1",
    "miniflare": "^4.20260305.0",
    "tsdown": "^0.16.5",
    "typescript": "catalog:",
    "wrangler": "^4.54.0"
  }
