{
  "name": "ironlog",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "check-types": "pnpm -r check-types",
    "dev:native": "pnpm --filter native dev",
    "dev:web": "pnpm --filter web dev",
    "dev:server": "pnpm --filter server dev",
    "db:push": "pnpm --filter @ironlog/db db:push",
    "db:generate": "pnpm --filter @ironlog/db db:generate",
    "db:generate:local": "pnpm --filter @ironlog/db db:generate:local",
    "db:setup:local": "pnpm --filter server db:setup:local",
    "deploy": "pnpm --filter @ironlog/infra run deploy:run",
    "destroy": "pnpm --filter @ironlog/infra destroy",
    "check": "oxlint && oxfmt --write",
    "check:ci": "oxlint && oxfmt --check",
    "test": "pnpm -r test",
    "test:run": "pnpm -r test:run",
    "test:server": "pnpm --filter server test",
    "test:native": "pnpm --filter native test",
    "test:coverage": "pnpm --filter server test:coverage"
  },
  "dependencies": {
    "@ironlog/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "catalog:",
    "@ironlog/config": "workspace:*",
    "@types/node": "^22.13.14",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "packageManager": "pnpm@10.27.0"
}
